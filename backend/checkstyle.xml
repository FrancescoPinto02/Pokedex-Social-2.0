<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- General Checkstyle configuration -->
    <property name="charset" value="UTF-8"/> <!-- Charset of source files -->
    <property name="fileExtensions" value="java"/> <!-- Only check .java files -->
    <property name="tabWidth" value="2"/> <!-- Number of spaces equivalent to a tab -->
    <property name="severity" value="error"/> <!-- Default severity level for violations -->

    <!-- TreeWalker: main module for AST-based checks -->
    <module name="TreeWalker">
        <property name="tabWidth" value="2"/> <!-- Override tabWidth for child checks -->

        <!-- Import checks -->
        <module name="AvoidStarImport"/> <!-- Disallow wildcard imports (import *) -->

        <!-- Naming conventions -->
        <module name="ConstantName"/> <!-- Check constant naming conventions -->
        <module name="MemberName"/> <!-- Check class member naming conventions -->
        <module name="MethodName"/> <!-- Check method naming conventions -->
        <module name="ParameterName"/> <!-- Check method parameter naming conventions -->

        <!-- Code structure checks -->
        <module name="EmptyBlock"/> <!-- Disallow empty code blocks like {}, except in special cases -->
        <module name="RedundantModifier"/> <!-- Remove redundant modifiers, e.g., 'public' in interfaces -->

        <!-- Method length check -->
        <module name="MethodLength">
            <property name="max" value="150"/> <!-- Maximum number of lines per method -->
        </module>

    </module>

    <!-- Line length check -->
    <module name="LineLength">
        <property name="fileExtensions" value="java"/> <!-- Apply only to .java files -->
        <property name="max" value="100"/> <!-- Maximum line length -->
        <property name="ignorePattern"
                  value="^package.*|^import.*|href\s*=\s*&quot;[^&quot;]*&quot;|http://|https://|ftp://"/>
        <!-- Patterns to ignore for line length:
             - package and import statements
             - links in Javadoc comments (http, https, ftp, href) -->
    </module>

</module>
